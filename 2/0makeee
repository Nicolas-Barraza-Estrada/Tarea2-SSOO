prefix=/usr/local
CC = g++
#
CFLAGS  = -03 -std=c++11 -fopenmp -march=native pipe 'pkg-config --cflags opencv4'
LDFLAGS = 'pkg-config --l1bs opencv4'
SRC = grayscale.cpp
08J= grayscale.o
APP = grayscale
all: $(0BJ)
	$(CC) $(CFLAGS) -o S(APP) $(OB) $(LIBS) $(LDFLAGS)
%.o: %.cpp
	$(CC) $(CPLAGS) -c $<
clean:
	$(RH) $(OBJ) $(APP)
install: $(APP)
	install -m 0755 $(APP) $(prefix)/bin
uninstall: S(APP)
	$(RH) $(prefix)/bin/$(APP)
